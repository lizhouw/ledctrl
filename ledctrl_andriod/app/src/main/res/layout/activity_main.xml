<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:id="@+id/edit_ledstatus"
        android:background="#32000000"
        android:layout_centerHorizontal="true" 
		android:layout_marginTop="50dp"
        android:editable="false"
        android:enabled="false"
        android:inputType="none" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_getstatus"
        android:id="@+id/button_getstatus"
        android:layout_below="@+id/edit_ledstatus"
        android:layout_centerHorizontal="true" 
		android:layout_marginTop="50dp" />

	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_ledon"
        android:id="@+id/button_ledon"
		android:layout_below="@+id/button_getstatus"
        android:layout_centerHorizontal="true" 
		android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_ledoff"
        android:id="@+id/button_ledoff"
        android:layout_below="@+id/button_ledon"
        android:layout_centerHorizontal="true" 
		android:layout_marginTop="50dp" />


</RelativeLayout>
